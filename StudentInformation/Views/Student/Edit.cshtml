@model StudentInformation.Models.Student

<h3 class="mt-4" style="color: teal;">Edit Student Information</h3>

<form asp-action="Edit" method="post" class="mt-3">
    <input type="hidden" asp-for="StudentID" />

    <div class="form-group mb-3">
        <label asp-for="FullName" class="control-label">Full Name</label>
        <input asp-for="FullName" class="form-control" />
        <span asp-validation-for="FullName" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="DateOfBirth" class="control-label">Date of Birth</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" value="@Model.DateOfBirth.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Gender" class="control-label">Gender</label>
        <input asp-for="Gender" class="form-control" />
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Address" class="control-label">Address</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="ContactNumber" class="control-label">Contact Number</label>
        <input asp-for="ContactNumber" class="form-control" />
        <span asp-validation-for="ContactNumber" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2 align-items-center">
        <button type="submit" class="btn" style="background-color: teal; color: white;">Save</button>
        <a asp-action="Index" asp-controller="Student" class="btn btn-secondary">Cancel</a>
    </div>
</form>
